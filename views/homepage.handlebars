{{! <div class="homepage-container"> }}
{{#each posts as |post|}}
  <div class="post">
    <header class="post-header">
      <a href="/post/{{post.id}}" class="post-title">{{post.title}}</a>
      <p class="created-details">Posted by
        {{post.user.username}}
        on
        {{format_date createdAt}}</p>
    </header>
    <p class="post-content">
      {{post.contents}}
    </p>
  </div>
{{/each}}
{{! </div> }}