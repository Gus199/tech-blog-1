<div class="post">
  <header class="post-header">
    <p class="post-title">{{title}}</p>
    <p class="created-details">Posted by
      {{user.username}}
      on
      {{format_date createdAt}}</p>
  </header>
  <p class="post-content">
    {{contents}}
  </p>
</div>
<div class="comments">
  <header class="comments-header">Comments</header>
  {{#each comments as |comment|}}
    <div class="comment">{{comment.comment}}
      <p class="comment-details">-{{comment.user.username}}
        on
        {{format_date createdAt}}</p>
    </div>
  {{/each}}
</div>

{{#if logged_in}}
  <form data-id="{{id}}" class="form new-comment-form">
    <div class="form-group">
      <label for="comment-content">Comment:</label>
      <textarea
        class="form-input"
        id="comment-content"
        name="comment-content"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit Comment</button>
    </div>
  </form>

{{/if}}

<script src="../js/comment.js"></script>