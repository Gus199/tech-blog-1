<div>
  {{#each posts as |post|}}
    <div class="post">
      <header class="post-header">
        <a href="/post/{{post.id}}" class="post-title">{{post.title}}</a>
        <p class="created-details">Posted on {{format_date createdAt}}</p>
      </header>
      <p class="post-content">
        {{post.contents}}
      </p>
    </div>
  {{/each}}
  <a href="/posts/add" class="add-post-button">Add Post</a>
</div>