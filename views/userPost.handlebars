<form data-id="{{id}}" class="form update-post-form">
  <div class="form-group">
    <label for="post-title">post title:</label>
    <input
      class="form-input"
      type="text"
      id="post-title"
      name="post-title"
      value="{{title}}"
    />
  </div>
  <div class="form-group">
    <label for="post-content">content:</label>
    <textarea
      class="form-input"
      id="post-content"
      name="post-content"
    >{{contents}}</textarea>
  </div>
  <div class="form-group">
    <button
      type="submit"
      data-id-update="{{id}}"
      class="btn btn-primary update-post-button"
    >Update</button>
    <button
      data-id-delete="{{id}}"
      class="btn btn-primary delete-post-button"
    >Delete</button>
  </div>
</form>

<script src="../js/updateUserPost.js"></script>